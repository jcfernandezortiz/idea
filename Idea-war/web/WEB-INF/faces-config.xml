<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <navigation-rule>
       <from-view-id>/pages/usuario/Login.xhtml</from-view-id>
       <navigation-case>
           <from-outcome>success</from-outcome>
           <to-view-id>/pages/idea/List.xhtml</to-view-id>
       </navigation-case>
       <navigation-case>
           <from-outcome>fail</from-outcome>
           <to-view-id>/pages/usuario/Login.xhtml</to-view-id>
       </navigation-case>
       <navigation-case>
           <from-outcome>register</from-outcome>
           <to-view-id>/pages/usuario/Create.xhtml</to-view-id>
       </navigation-case>
   </navigation-rule>
    <navigation-rule>
       <from-view-id>/pages/usuario/Create.xhtml</from-view-id>
       <navigation-case>
           <from-outcome>login</from-outcome>
           <to-view-id>/pages/usuario/Login.xhtml</to-view-id>
       </navigation-case>
   </navigation-rule>
</faces-config>
